{
  "name": "music-player",
  "version": "1.0.0",
  "description": "KuGou Music Player",
  "author": "YourName",
  "main": "electron/main.js",
  "private": true,
  "scripts": {
    "dev": "vite",
    "build:front": "vite build",
    "start:electron-dev": "concurrently \"vite\" \"wait-on http://localhost:5173 && electron .\"",
    "electron:serve": "electron .",
    "electron:build": "npm run build:front && electron-builder",
    "preview": "vite preview",
    "lint": "eslint . --fix",
    "format": "prettier --write src/"
  },
  "build": {
    "appId": "com.kugou.musicplayer",
    "productName": "KuGouMusic",
    "compression": "maximum",
    "asar": true,
    "files": [
      "dist/**/*",
      "electron/main.js",
      "KuGouMusicApi/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "KuGouMusicApi",
        "to": "KuGouMusicApi"
      },
      {
        "from": "KuGouMusicApi/node_modules",
        "to": "KuGouMusicApi/node_modules"
      },
      {
        "from": "dist",
        "to": "dist"
      }
    ],
    "directories": {
      "output": "release"
    },
    "win": {
      "target": "nsis"
    }
  },
  "dependencies": {
    "@element-plus/icons-vue": "^2.3.1",
    "@material/material-color-utilities": "^0.3.0",
    "axios": "^1.10.0",
    "color-thief-browser": "^2.0.2",
    "dotenv": "^17.2.0",
    "element-plus": "^2.10.4",
    "express": "^5.1.0",
    "http-server": "^14.1.1",
    "pako": "^2.1.0",
    "pinia": "^3.0.3",
    "pinia-plugin-persistedstate": "^4.4.1",
    "vue": "^3.5.17",
    "vue-router": "^4.5.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.31.0",
    "@vitejs/plugin-legacy": "^7.0.1",
    "@vitejs/plugin-vue": "^6.0.0",
    "@vue/eslint-config-prettier": "^10.2.0",
    "concurrently": "^9.2.0",
    "cross-env": "^7.0.3",
    "electron": "^37.2.3",
    "electron-builder": "^26.0.12",
    "eslint": "^9.31.0",
    "eslint-plugin-vue": "~10.3.0",
    "globals": "^16.3.0",
    "prettier": "3.6.2",
    "sass-embedded": "^1.89.2",
    "unplugin-auto-import": "^19.3.0",
    "unplugin-vue-components": "^28.8.0",
    "vite": "^7.0.5",
    "vite-plugin-vue-devtools": "^7.7.7",
    "wait-on": "^8.0.3"
  }
}
